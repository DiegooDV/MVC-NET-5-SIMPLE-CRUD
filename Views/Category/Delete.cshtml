@model Category
@{
	ViewData["Title"] = "Delete | Category";
}

<form method="post" asp-action="DeleteById">
	<input asp-for="Id" hidden />
	<div class="border p-3">
		<div class="form-group row p-3">

			<h2 class="text-info">Delete Category</h2>
		</div>
		<div class="row">
			<div class="col-8">
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="Name"></label>
					</div>
					<div class="col-8">
						<input asp-for="Name" class="form-control" disabled />
					</div>

				</div>
				<div class="form-group row">
					<div class="col-4">
						<label asp-for="DisplayOrder"></label>
					</div>
					<div class="col-8">
						<input asp-for="DisplayOrder" class="form-control" disabled />
					</div>

				</div>
				<div class="form-group row">
					<div class="col-8 offset-4 row">

						<div class="col">
							<input type="submit" class="btn btn-danger w-100" value="Delete" />
						</div>
						<div class="col">
							<a asp-action="Index" class="btn btn-info w-100"><i class="fas fa-arrow-left"></i>&nbsp;Go Back</a>
						</div>
					</div>
				</div>
			</div>
			<div class="col-4">
				@* Keep this empty *@
			</div>
		</div>
	</div>
</form>
@section Styles {
	<link href="~/fontawesome-free-5.15.2-web/css/all.css" rel="stylesheet" />
}

@section Scripts{
	@{
		<partial name="_ValidationScriptsPartial" />
	}
}